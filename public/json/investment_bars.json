{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Modern Slavery Due Diligence Processes in Investments",
  "width": 250,
  "height": 330,
  "signals": [
    {"name": "numGroups", "value": 5},
    {"name": "barHeight", "value": 15},
    {"name": "height", "update": "numGroups * (barHeight + 15)+ 100"}
  ],
  "data": [
    {
      "name": "portfolio",
      "url": "https://wikirate.org/Walk_Free_Foundation+Human_Rights_investment_policy_sector_specific+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"}
      ]
    },
    {
      "name": "assesses",
      "url": "https://wikirate.org/Walk_Free_Foundation+Assesses_MS_risks_of_investee_companies_sector_specific+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"}
      ]
    },
    {
      "name": "engagement",
      "url": "https://wikirate.org/Walk_Free_Foundation+Engagement_on_MS_with_investee_companies_sector_specific+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"}
      ]
    },
    {
      "name": "reporting",
      "url": "https://wikirate.org/Walk_Free_Foundation+Cascading_reporting_obligations_under_MSA_sector_specific+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"}
      ]
    },
    {
      "name": "none",
      "url": "https://wikirate.org/Walk_Free_Foundation+Considers_MS_Risks_in_Investments_sector_specific+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["No"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'No'"}
      ]
    },
    {
      "name": "labels",
      "values": [
        {"label": "Have Human Rights policy"},
        {"label": "Assess modern slavery risk"},
        {"label": "Engage on modern slavery"},
        {"label": "Require MSA report"},
        {"label": "None of the above"}
      ]
    },
    {
      "name": "counts",
      "source": ["portfolio", "assesses", "engagement", "reporting", "none"],
      "transform": [
        {"type": "window", "ops": ["row_number"], "as": ["seq"]},
        {
          "type": "formula",
          "expr": "data('labels')[datum.seq -1]['label']",
          "as": "title"
        },
        {
          "type": "formula",
          "expr": "datum.count/datum.sum_count",
          "as": "percentage"
        },
        {
          "type": "formula",
          "expr": "format(datum.count / datum.sum_count, '.0%')",
          "as": "count_label"
        },
        {
          "type": "formula",
          "expr": "if(datum.value == 'No', 2, 0)",
          "as": "color"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, 1],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {"data": "counts", "field": "title"},
      "type": "band",
      "padding": 0.4
    },
    {
      "name": "color",
      "type": "linear",
      "domain": [0, 3],
      "range": ["#FF9300", "#FFDC00", "#FE0000", "#0037F1"]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "value": 1},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"value": "#000028"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "field": "percentage"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"scale": "color", "field": "color"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "value": 1 },
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "baseline": {"value": "bottom"},
          "align": { "value": "right"},
          "fill": {"value": "#000028"},
          "text": {"field": "count_label"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "name": "nocounts",
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 5},
          "y": {"scale": "yscale", "field": "title", "offset": 2},
          "baseline":{ "value": "top"},
          "text": {"signal": "if(datum.count == 0, 'None', '')"},
          "fill": {"value": "white"},
          "fontStyle": {"value": "italic" }
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "text": {"field": "title"},
          "fill": {"value": "#000028"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ]
}
