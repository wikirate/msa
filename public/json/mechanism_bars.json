{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A nested bar chart example, with bars grouped by category.",
  "width": 300,
  "height": 300,
  "padding": {"right": 5},
  "signals": [
    {"name": "totalAnswers", "update": "data('answers').length"},
    {"name": "barHeight", "value": "15"},
    {"name": "navyOpacity", "value": 1}
  ],
  "data": [
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_whistleblowing_mechanism_binary+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest",
      "transform": [
        {
          "type": "formula",
          "expr": "split(datum.value, ', ')",
          "as": "value_array"
        }
      ]
    },
    {
      "name": "subgroups",
      "values": [
        {"key": "(direct employees)", "label": "direct employees"},
        {"key": "(supply chain workers)", "label": "supply chain workers"},
        {"key": "", "label": "direct employees"}
      ],
      "transform": [{"type": "window", "ops": ["row_number"], "as": ["seq"]}]
    },
    {
      "name": "groups",
      "values": [
        {"title": "Hotline, Email, Contact Form", "term": "Hotline"},
        {"title": "Focal Point", "term": "Focal Point"},
        {
          "title": "Whistleblower protection",
          "term": "Whistleblower protection"
        },
        {"title": "None of the Above", "term": "No"}
      ],
      "transform": [{"type": "window", "ops": ["row_number"], "as": ["seq"]}]
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {"type": "flatten", "fields": ["value_array"], "as": ["value"]},
        {"type": "aggregate", "ops": ["count"], "groupby": ["value"]},
        {
          "type": "formula",
          "as": "term",
          "expr": "replace(datum.value, / \\(.*/, '')"
        },
        {
          "type": "formula",
          "as": "parens",
          "expr": "replace(datum.value, /^[^\\(]*/, '')"
        },
        {
          "type": "impute",
          "key": "term",
          "keyvals": [
            "Hotline",
            "Focal Point",
            "Whistleblower protection",
            "No"
          ],
          "field": "parens",
          "value": "(direct employees)"
        },
        {
          "type": "formula",
          "expr": "if(datum.count == null, 0, datum.count)",
          "as": "count"
        },
        {
          "type": "impute",
          "groupby": ["term"],
          "key": "parens",
          "field": "count",
          "value": 0
        },
        {
          "type": "lookup",
          "from": "groups",
          "key": "term",
          "fields": ["term"],
          "values": ["seq"],
          "as": ["group_seq"]
        },
        {
          "type": "lookup",
          "from": "subgroups",
          "key": "key",
          "fields": ["parens"],
          "values": ["seq", "label"],
          "as": ["subgroup_seq", "subgroup_label"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum.group_seq) && if(datum.term == 'No', datum.subgroup_seq > 2, datum.subgroup_seq < 3)"
        },
        {"type": "collect", "sort": {"field": ["group_seq", "subgroup_seq"]}},
        {
          "type": "formula",
          "expr": "datum.count + '/' + totalAnswers",
          "as": "count_label"
        },
        {
          "type": "formula",
          "expr": "if(datum.value == null, datum.term + datum.parens, datum.value)",
          "as": "value"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, {"signal": "totalAnswers"}],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "ygroupscale",
      "range": "height",
      "domain": {"data": "counts", "field": "term"},
      "type": "band",
      "padding": 0.4
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "counts", "field": "subgroup_seq"},
      "range": ["#FF9300", "#FFDC00", "#FE0000"]
    },
    {
      "name": "twoColor",
      "type": "ordinal",
      "domain": {"data": "counts", "field": "subgroup_label"},
      "range": ["#FF9300", "#FFDC00"]
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {"name": "faceted_counts", "groupby": "term", "data": "counts"}
      },
      "encode": {
        "enter": {
          "fill": {"value": "grey"},
          "y": {"scale": "ygroupscale", "field": "term"}
        }
      },
      "scales": [
        {
          "name": "yscale",
          "type": "band",
          "range": "height",
          "domain": {"data": "faceted_counts", "field": "value"},
          "padding": 0.1
        }
      ],
      "signals": [{"name": "height", "update": "bandwidth('ygroupscale')"}],
      "marks": [
        {
          "type": "rect",
          "from": {"data": "faceted_counts"},
          "encode": {
            "update": {
              "x": {"value": 0},
              "x2": {"scale": "xscale", "signal": "totalAnswers"},
              "y": {"scale": "yscale", "field": "value"},
              "height": {"signal": "barHeight"},
              "fill": {"value": "#000028"},
              "opacity": {"signal": "navyOpacity"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "faceted_counts"},
          "encode": {
            "update": {
              "x": {"value": 0},
              "x2": {"scale": "xscale", "field": "count"},
              "y": {"scale": "yscale", "field": "value"},
              "height": {"signal": "barHeight"},
              "fill": {"scale": "color", "field": "subgroup_seq"}
            }
          }
        },
        {
          "type": "text",
          "from": {"data": "faceted_counts"},
          "encode": {
            "update": {
              "x": {"scale": "xscale", "signal": "totalAnswers", "offset": 4},
              "y": {"scale": "yscale", "field": "value", "offset": 2},
              "baseline": {"value": "top"},
              "fill": {"value": "#000028"},
              "text": {"field": "count_label"},
              "fontWeight": {"value": "bold"}
            }
          }
        }
      ]
    },
    {
      "type": "text",
      "from": {"data": "groups"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"scale": "ygroupscale", "field": "term", "offset": -2},
          "text": {"field": "title"},
          "fill": {"value": "black"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "twoColor",
      "type": "symbol",
      "orient": "none",
      "direction": "horizontal",
      "encode": {
        "legend": {
          "update": {"x":{"signal": "width", "offset": -220}, "y": {"offset": -15}}
        },
        "labels": {"update": {"fontWeight": [{"value": 800}]}},
        "symbols": {"update": {"fillOpacity": [{"value": 1}]}}
      }
    }
  ]
}
