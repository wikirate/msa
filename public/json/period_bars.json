{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Reporting Periods for Assessed Modern Slavery",
  "width": 300,
  "height": 200,
  "signals": [
    {"name": "totalAnswers", "update": "data('answers').length"},
    {"name": "barHeight", "value": "15"}
  ],
  "data": [
    {
      "name": "answers",
      "url": "https://wikirate.org/Business_Human_Rights_Resource_Centre+Modern_Slavery_Statement+Answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known&filter[company_group][]=FTSE_100",
      "transform": [
        {
          "type": "formula",
          "expr": "split(datum.value, ', ')",
          "as": "value_array"
        }
      ]
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {"type": "flatten", "fields": ["value_array"], "as": ["value"]},
        {
          "type": "formula",
          "expr": "if(test(/UK Modern/, datum.value), 'FY ' + datum.year, if(test(/^No/, datum.value), 'No Statement', null))",
          "as": "title"
        },
        {"type": "aggregate", "groupby": ["title"]},
        {"type": "impute", "key": "title", "keyvals": ["FY 2020", "FY 2019", "FY 2018", "No Statement"], "field": "count", "value": 0

        },
        {
          "type": "formula",
          "expr": "if(datum.title == 'No Statement', 2, 0)",
          "as": "color"
        },
        {"type": "filter", "expr": "isValid(datum.title)"},
        {
          "type": "collect",
          "sort": {
            "field": ["color", "title"],
            "order": ["ascending", "descending"]
          }
        },
        {
          "type": "formula",
          "expr": "datum.count + '/' + totalAnswers",
          "as": "count_label"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, {"signal": "totalAnswers"}],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {"data": "counts", "field": "title"},
      "type": "band",
      "padding": 0.4
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "counts", "field": "color"},
      "range": ["#FF9300", "#FFDC00", "#FE0000"]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"value": "#000028"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "field": "count"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"scale": "color", "field": "color"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 5},
          "y": {"scale": "yscale", "field": "title", "offset": 2},
          "baseline":{ "value": "top"},
          "text": {"signal": "if(datum.count == 0, 'None', '')"},
          "fill": {"value": "white"},
          "fontStyle": {"value": "italic" }
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "signal": "totalAnswers" },
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "baseline": {"value": "bottom"},
          "align": { "value": "right"},
          "fill": {"value": "#000028"},
          "text": {"field": "count_label"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "text": {"field": "title"},
          "fill": {"value": "#000028"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ]
}
