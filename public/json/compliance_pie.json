{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 190,
  "height": 180,
  "padding": 10,
  "signals": [
    {
      "name": "grouptip",
      "value": {},
      "on": [
        {"events": "arc:mouseover", "update": "datum"},
        {"events": "arc:mouseout", "update": "{}"}
      ]
    }
  ],
  "data": [
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+Meets_Minimum_UK_MSA_Requirements+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group][]=MSA_Asset_Managers&filter[year]=latest"
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["value"],
          "ops": ["count"],
          "fields": ["count"],
          "as": ["count"]
        },
        {"type": "pie", "field": "count", "sort": false},
        {"type": "formula", "as": "filter", "expr": "{ value: datum.value }"},
        {
          "type": "window",
          "ops": ["sum"],
          "fields": ["count"],
          "frame": [null, null]
        },
        {
          "type": "formula",
          "as": "percentage",
          "expr": "format(datum.count / datum.sum_count, '.0%')"
        },
        {"type": "collect", "sort": {"field": "value"}},
        {
          "type": "formula",
          "expr": "if(datum.value == 'Yes', 'Met', 'Not Met')",
          "as": "value"
        },
        {
          "type": "formula",
          "expr": "datum.count + ' out of ' + datum.sum_count + ' companies'",
          "as": "count_label"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {"data": "counts"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "value"},
          "x": {"value": 100},
          "y": {"value": 100},
          "tooltip": {"field": "count_label"}
        },
        "update": {
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "padAngle": {"value": 0},
          "innerRadius": {"value": 0},
          "outerRadius": {"value": 100},
          "cornerRadius": {"value": 0},
          "opacity": {"value": 1},
          "strokeWidth": {"value": 0},
          "stroke": {"value": "#0037F1"}
        },
        "hover": {
          "opacity": {"value": 0.9},
          "strokeWidth": {"value": 2},
          "cursor": {"value": "pointer"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "enter": {
          "x": {"value": 100},
          "y": {"value": 100},
          "radius": {"value": 65},
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 15},
          "theta": {"signal": "(datum.startAngle + datum.endAngle)/2"},
          "fill": {"value": "white"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "text": {"field": "percentage"}
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "type": "symbol",
      "encode": {
        "labels": {
          "update": {
            "fontSize": {"value": 13},
            "fontWeight": [
              {"test": "grouptip.value == datum.label", "value": "bold"},
              {"value": 400}
            ]
          }
        },
        "symbols": {
          "update": {
            "stroke": { "value": "#0037F1" },
            "strokeWidth": { "signal" : "if(grouptip.value == datum.label, 1, 0)" }

          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": ["#000028", "#FF9300"],
      "domain": {"data": "counts", "field": "value"}
    }
  ]
}