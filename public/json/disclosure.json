{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Disclosure rates by asset manager",
  "width": 400,
  "signals": [
    {"name": "totalAnswers", "update": "data('answers').length"},
    {"name": "barHeight", "value": 17},
    {"name": "height", "update": "(barHeight + 2) * totalAnswers"},
    {
      "name": "colors",
      "value": {"orange": "#FF9300", "yellow": "#FFDC00", "navy": "#000028"}
    },
    {
      "name": "currentDatum",
      "value": {},
      "on": [
        {"events": "rect:mouseover, @companyLabel:mouseover", "update": "datum"},
        {"events": "rect:mouseout, @companyLabel:mouseout", "update": "{}"}
      ]
    },
    {
      "name": "sort",
      "bind": {
        "input": "radio",
        "options": ["company_name", "value"],
        "labels": ["name", "number"],
        "element": "#disclosure-sorting",
        "name": "sort:"
      },
      "value": "company_name"
    }
  ],
  "data": [
    {
      "name": "companies",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_Beyond_Compliance_Disclosure_Rate+Answer/company_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known",
      "transform": [
        {
          "type": "formula",
          "expr": "datum.name",
          "as": "company_name"
        }
      ]
    },
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_Beyond_Compliance_Disclosure_Rate+Answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known",
      "transform": [
        {
          "type": "lookup",
          "from": "companies",
          "key": "id",
          "fields": ["company"],
          "values": ["name"],
          "as": ["company_name"]
        },
        {
          "type": "window",
          "sort": {"field": {"signal": "sort"}},
          "ops": ["row_number"],
          "fields": [null],
          "as": ["rank"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, 11],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {
        "data": "answers",
        "field": "company_name",
        "sort": {
          "field": "rank",
          "op":"min",
          "order": {"signal": "if(sort == 'value', 'descending', 'ascending')"}
        }
      },
      "type": "band",
      "padding": 0.2
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "top",
      "domain": false,
      "ticks": false,
      "grid": true,
      "zindex": 5,
      "gridColor": "#888",
      "gridWidth": 1
    },
    {
      "scale": "yscale",
      "orient": "left",
      "labelLimit": 0,
      "ticks": false,
      "domain": false,
      "labelPadding": 10,
      "labelFontSize": 13,
      "encode": {
        "labels": {
          "name": "companyLabel",
          "interactive": true,
          "update": {
            "fill": {"signal": "if(currentDatum.value == datum.value || currentDatum.company_name == datum.value, colors.orange, colors.navy)"}

          },
          "hover": {"cursor": {"value": "pointer"}}
        }

      }
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "answers"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "value": 0},
          "x2": {"scale": "xscale", "field": "value"},
          "y": {"scale": "yscale", "field": "company_name"},
          "height": {"signal": "barHeight"},
          "fill": {"signal": "if(currentDatum.value == datum.company_name || currentDatum.company_name == datum.company_name, colors.navy, colors.orange)"}
        },
        "hover": {"cursor": {"value": "pointer"}}
      }
    }
  ]
}