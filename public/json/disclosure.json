{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Disclosure rates by asset manager",
  "width": 400,
  "signals": [
    {
      "name": "totalAnswers",
      "update": "data('answers').length"
    },
    {
      "name": "barHeight",
      "value": 17
    },
    {
      "name": "height",
      "update": "(barHeight + 2) * totalAnswers"
    },
    {
      "name": "colors",
      "value": {
        "orange": "#FF9300",
        "yellow": "#FFDC00",
        "navy": "#000028"
      }
    },
    {
      "name": "currentDatum",
      "value": {},
      "on": [
        {
          "events": "rect:mouseover, text:mouseover",
          "update": "datum"
        },
        {
          "events": "rect:mouseout, text:mouseout",
          "update": "{}"
        }
      ]
    },
    {
      "name": "sort",
      "bind": {
        "input": "radio",
        "options": [
          "company_name",
          "value"
        ],
        "labels": [
          "name",
          "number"
        ],
        "element": "#disclosure-sorting",
        "name": "sort:"
      },
      "value": "company_name"
    }
  ],
  "data": [
    {
      "name": "companies",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_Beyond_Compliance_Disclosure_Rate+Answer/company_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest&filter[status]=known",
      "transform": [
        {
          "type": "formula",
          "expr": "datum.name",
          "as": "company_name"
        }
      ]
    },
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_Beyond_Compliance_Disclosure_Rate+Answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest&filter[status]=known",
      "transform": [
        {
          "type": "lookup",
          "from": "companies",
          "key": "id",
          "fields": [
            "company"
          ],
          "values": [
            "name"
          ],
          "as": [
            "company_name"
          ]
        },
        {
          "type": "window",
          "sort": {
            "field": {
              "signal": "sort"
            }
          },
          "ops": [
            "row_number"
          ],
          "fields": [
            null
          ],
          "as": [
            "rank"
          ]
        },
        {
          "type": "formula",
          "as": "wikirate_page",
          "expr": "'Walk_Free_Foundation+MSA_Beyond_Compliance_Disclosure_Rate' + '+~' + datum.company + '+' + datum.year + '/details_sidebar'"
        },
        {
          "type": "formula",
          "as": "filter",
          "expr": "{}"
        },
        {
          "type": "formula",
          "as": "tooltip",
          "expr": "'meeting ' + datum.value + ' metrics'"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [
        0,
        11
      ],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {
        "data": "answers",
        "field": "company_name",
        "sort": {
          "field": "rank",
          "op": "min",
          "order": {
            "signal": "if(sort == 'value', 'descending', 'ascending')"
          }
        }
      },
      "type": "band",
      "padding": 0.2
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "top",
      "domain": false,
      "ticks": false,
      "grid": true,
      "zindex": 5,
      "gridColor": "#888",
      "gridWidth": 1
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "answers"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "value": 0
          },
          "x2": {
            "scale": "xscale",
            "field": "value"
          },
          "y": {
            "scale": "yscale",
            "field": "company_name"
          },
          "height": {
            "signal": "barHeight"
          },
          "fill": {
            "signal": "if(currentDatum.id == datum.id, colors.navy, colors.orange)"
          },
          "tooltip": {
            "signal": "datum.tooltip"
          }
        },
        "hover": {
          "cursor": {
            "value": "pointer"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "answers"
      },
      "encode": {
        "update": {
          "x": {
            "value": -5
          },
          "width": {
            "scale": "xscale",
            "field": "value"
          },
          "y": {
            "scale": "yscale",
            "field": "company_name",
            "offset": 14
          },
          "height": {
            "signal": "barHeight"
          },
          "align": {
            "value": "right"
          },
          "text": {
            "field": "company_name"
          },
          "fontSize": {
            "value": 13
          },
          "fill": {
            "signal": "if(currentDatum.id == datum.id, colors.orange, colors.navy)"
          }
        },
        "hover": {
          "cursor": {
            "value": "pointer"
          }
        }
      }
    }
  ]
}