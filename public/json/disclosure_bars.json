{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A nested bar chart example, with bars grouped by category.",
  "width": 300,
  "signals": [
    {"name": "totalAnswers", "update": "data('answers').length"},
    {"name": "numGroups", "update": "data('groups').length"},
    {"name": "barHeight", "value": 15},
    {"name": "navyOpacity", "value": 1},
    {"name": "height", "update": "numGroups * (barHeight + 5)+ 100"}
  ],
  "data": [
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_supply_chain_disclosure+Answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known",
      "transform": [
        {
          "type": "formula",
          "expr": "split(datum.value, ', ')",
          "as": "value_array"
        }
      ]
    },
    {
      "name": "groups",
      "values": [
        { "key": "Geographical", "title": "Geographic Regions Disclosure"},
        { "key": "Facility/Supplier", "title": "Facility/Suppliers Disclosure"},
        { "key": "No", "title": "None of the above"}
      ]
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["No", "Geographical", "Facility/Supplier"],
          "field": "count",
          "value": 0
        },
        {
          "type": "formula",
          "expr": "datum.count + '/' + totalAnswers",
          "as": "count_label"
        },
        {
          "type": "lookup",
          "key": "key",
          "from": "groups",
          "fields": ["value"],
          "values": ["title"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, {"signal": "totalAnswers"}],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {"data": "groups", "field": "title"},
      "type": "band",
      "padding": 0.4
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "groups", "field": "title"},
      "range": ["#FF9300", "#FF9300", "#FE0000"]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "value": 0},
          "x2": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"value": "#000028"},
          "opacity": {"signal": "navyOpacity"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "field": "count"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"scale": "color", "field": "title"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "baseline": {"value": "bottom"},
          "align": {"value": "right"},
          "fill": {"value": "#000028"},
          "text": {"field": "count_label"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "text": {"field": "title"},
          "fill": {"value": "#000028"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ]
}