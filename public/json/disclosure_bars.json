{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Supply Chain Disclosure",
  "width": 300,
  "signals": [
    {"name": "totalAnswers", "update": "data('answers').length"},
    {"name": "numGroups", "update": "data('groups').length"},
    {"name": "barHeight", "value": 15},
    {"name": "height", "update": "numGroups * (barHeight + 15)+ 100"},
    {
      "name": "colors",
      "value": {"orange": "#FF9300", "red": "#FE0000", "blue": "#0037F1", "navy": "#000028"}
    },
    {
      "name": "barTitle",
      "value": null,
      "on": [
        {"events": "rect:mouseover, text:mouseover", "update": "datum.title"},
        {"events": "rect:mouseout, text:mouseout", "update": "{}"}
      ]
    }
  ],
  "data": [
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_supply_chain_disclosure+Answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known",
      "transform": [
        {
          "type": "formula",
          "expr": "split(datum.value, ', ')",
          "as": "value_array"
        }
      ]
    },
    {
      "name": "groups",
      "values": [
        { "key": "Geographical", "title": "Geographic Regions Disclosure", "color":  0},
        { "key": "Facility/Supplier", "title": "Facility/Suppliers Disclosure", "color":  0},
        { "key": "No", "title": "None of the above", "color":  1}
      ]
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["No", "Geographical", "Facility/Supplier"],
          "field": "count",
          "value": 0
        },
        {
          "type": "formula",
          "expr": "datum.count + '/' + totalAnswers",
          "as": "count_label"
        },
        {
          "type": "lookup",
          "key": "key",
          "from": "groups",
          "fields": ["value"],
          "values": ["title", "color"]
        },
        {
          "type": "formula",
          "expr": "format(datum.count / totalAnswers, '.0%')",
          "as": "percent_label"
        },
        {"type": "formula", "as": "filter", "expr": "{ value: datum.value }"}
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, {"signal": "totalAnswers"}],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {"data": "groups", "field": "title"},
      "type": "band",
      "padding": 0.4
    },
    {
      "name": "color",
      "type": "linear",
      "domain": [0, 2],
      "range": { "signal": "[colors.orange, colors.red, colors.navy]"}
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "value": 0},
          "x2": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"signal": "colors.navy"},
          "tooltip": {"field": "percent_label"},
          "opacity": {"signal": "if(barTitle == datum.title, 0.5, 1)"}
        },
        "hover": {"cursor": {"value": "pointer"}}
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "field": "count"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"scale": "color", "field": "color"},
          "tooltip": {"field": "percent_label"}
        },
        "hover": {"cursor": {"value": "pointer"}}
      }
    },
    {
      "name": "nocounts",
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 5},
          "y": {"scale": "yscale", "field": "title", "offset": 2},
          "baseline":{ "value": "top"},
          "text": {"signal": "if(datum.count == 0, 'None', '')"},
          "fill": {"value": "white"},
          "fontStyle": {"value": "italic" }
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "baseline": {"value": "bottom"},
          "align": {"value": "right"},
          "text": {"field": "count_label"},
          "fill": {
            "scale": "color",
            "signal": "if(barTitle == datum.title, datum.color, 2)"
          },
          "fontWeight": {"value": "bold"}
        },
        "hover": {"cursor": {"value": "pointer"}}
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "text": {"field": "title"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"},
          "fill": {
            "scale": "color",
            "signal": "if(barTitle == datum.title, datum.color, 2)"
          }
        },
        "hover": {"cursor": {"value": "pointer"}}
      }
    }
  ]
}