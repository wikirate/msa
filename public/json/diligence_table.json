{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Investment portfolio due diligence",
  "width": 400,
  "padding": {"top": 20},
  "signals": [
    {"name": "numCompanies", "update": "data('companies').length"},
    {"name": "barHeight", "value": 21},
    {"name": "height", "update": "(barHeight+ 1)  * numCompanies"},
    {"name": "lastColumn", "update": "data('metrics')[6]['heading']"},
    {"name": "firstColumn", "update": "data('metrics')[0]['heading']"},
    {
      "name": "currentAnswer",
      "value": {},
      "on": [
        {"events": "rect:mouseover, text:mouseover", "update": "datum"},
        {"events": "rect:mouseout, text:mouseout", "update": "{}"}
      ]
    },
    {
      "name": "activeHeading",
      "update": "lastColumn",
      "on": [{"events": "@x_labels:click", "update": "datum.value"}]
    },
    {
      "name": "activeIndex",
      "update": "indexof(pluck(data('metrics'), 'heading'),activeHeading)"
    },
    {
      "name": "sortTable",
      "update": "pluck(data('metrics'), 'table')[activeIndex]",
      "value": "statements"
    },
    {
      "name": "colors",
      "value": {
        "orange": "#FF9300",
        "red": "#FE0000",
        "blue": "#0037F1",
        "navy": "#000028",
        "yellow": "#FFDC00",
        "faintNavy": "#DDDDE3"
      }
    }
  ],
  "data": [
    {
      "name": "statements",
      "url": "https://wikirate.org/Business_Human_Rights_Resource_Centre+Modern_Slavery_Statement+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest",
      "transform": [
        {
          "type": "formula",
          "expr": "if(test(/Yes/, datum.value), 'Yes', 'No')",
          "as": "value"
        }
      ]
    },
    {
      "name": "initiatives",
      "url": "https://wikirate.org/Walk_Free_Foundation+Industry_initiatives_and_collaborations_sector_specific+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest"
    },
    {
      "name": "investments",
      "url": "https://wikirate.org/Walk_Free_Foundation+Human_Rights_investment_policy_sector_specific+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest"
    },
    {
      "name": "reporting",
      "url": "https://wikirate.org/Walk_Free_Foundation+Cascading_reporting_obligations_under_MSA_sector_specific+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest"
    },
    {
      "name": "assesses",
      "url": "https://wikirate.org/Walk_Free_Foundation+Assesses_MS_risks_of_investee_companies_sector_specific+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest"
    },
    {
      "name": "engagement",
      "url": "https://wikirate.org/Walk_Free_Foundation+Engagement_on_MS_with_investee_companies_sector_specific+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest"
    },
    {
      "name": "considers",
      "url": "https://wikirate.org/Walk_Free_Foundation+Considers_MS_Risks_in_Investments_sector_specific+answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter[year]=latest"
    },
    {
      "name": "values",
      "values": [
        {"key": "Yes", "short": "Yes"},
        {"key": "No", "short": "No"},
        {"key": "Unknown", "short": "â€“"}
      ],
      "transform": [{"type": "window", "ops": ["row_number"], "as": ["seq"]}]
    },
    {
      "name": "companies",
      "url": "https://wikirate.org/Business_Human_Rights_Resource_Centre+Modern_Slavery_Statement+Answer/company_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known",
      "transform": [
        {
          "type": "lookup",
          "key": "company",
          "from": "statements",
          "fields": ["id"],
          "values": ["value"],
          "as": ["statements"]
        },
        {
          "type": "lookup",
          "key": "company",
          "from": "initiatives",
          "fields": ["id"],
          "values": ["value"],
          "as": ["initiatives"]
        },
        {
          "type": "lookup",
          "key": "company",
          "from": "investments",
          "fields": ["id"],
          "values": ["value"],
          "as": ["investments"]
        },
        {
          "type": "lookup",
          "key": "company",
          "from": "reporting",
          "fields": ["id"],
          "values": ["value"],
          "as": ["reporting"]
        },
        {
          "type": "lookup",
          "key": "company",
          "from": "assesses",
          "fields": ["id"],
          "values": ["value"],
          "as": ["assesses"]
        },
        {
          "type": "lookup",
          "key": "company",
          "from": "engagement",
          "fields": ["id"],
          "values": ["value"],
          "as": ["engagement"]
        },
        {
          "type": "lookup",
          "key": "company",
          "from": "considers",
          "fields": ["id"],
          "values": ["value"],
          "as": ["considers"]
        },
        {
          "type": "lookup",
          "key": "key",
          "from": "values",
          "fields": [
            "statements",
            "initiatives",
            "investments",
            "reporting",
            "assesses",
            "engagement",
            "considers"
          ],
          "values": ["seq"],
          "as": [
            "statements",
            "initiatives",
            "investments",
            "reporting",
            "assesses",
            "engagement",
            "considers"
          ]
        },
        {
          "type": "collect",
          "sort": {
            "field": ["statements", "name"],
            "order": ["descending", "ascending"]
          }
        }
      ]
    },
    {
      "name": "metrics",
      "values": [
        {"id": 1827651, "heading": "have statement", "table": "statements"},
        {
          "id": 6908731,
          "heading": "join industry initiatives",
          "table": "initiatives"
        },
        {
          "id": 6908650,
          "heading": "have human rights policy",
          "table": "investments"
        },
        {"id": 6908670, "heading": "require msa report", "table": "reporting"},
        {
          "id": 6908693,
          "heading": "assess modern slavery risks",
          "table": "assesses"
        },
        {
          "id": 6908714,
          "heading": "engage on modern slavery",
          "table": "engagement"
        },
        {"id": 6916105, "heading": "total", "table": "considers"}
      ]
    },
    {
      "name": "table",
      "source": [
        "statements",
        "initiatives",
        "investments",
        "reporting",
        "assesses",
        "engagement",
        "considers"
      ],
      "transform": [
        {
          "type": "lookup",
          "from": "companies",
          "key": "id",
          "fields": ["company"],
          "values": ["name"],
          "as": ["company_name"]
        },
        {
          "type": "lookup",
          "from": "metrics",
          "key": "id",
          "fields": ["metric"],
          "values": ["heading"],
          "as": ["metric_heading"]
        },
        {
          "type": "lookup",
          "from": "values",
          "key": "key",
          "fields": ["value"],
          "values": ["short"]
        }
      ]
    },
    {
      "name": "countRows",
      "values": [
        {"key": "count", "label": "Total", "y": -60},
        {"key": "percent", "label": "Percent", "y": -38}
      ]
    },
    {
      "name": "counts",
      "source": "table",
      "transform": [
        {"type": "filter", "expr": "datum.value == 'Yes'"},
        {"type": "aggregate", "groupby": ["metric_heading"]},
        {
          "type": "impute",
          "key": "metric_heading",
          "keyvals": {"signal": "pluck(data('metrics'), 'heading')"},
          "field": "count",
          "value": 0
        },
        {
          "type": "formula",
          "expr": "format(datum.count / numCompanies, '.0%')",
          "as": "percent"
        },
        {"type": "fold", "fields": ["count", "percent"]},
        {
          "type": "lookup",
          "from": "countRows",
          "key": "key",
          "fields": ["key"],
          "values": ["y"]
        },
        {"type": "window", "ops": ["row_number"], "as": ["id"]}
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": {"data": "metrics", "field": "heading"},
      "type": "band",
      "range": "width"
    },
    {"name": "rowscale", "domain": [0, 1], "type": "linear", "range": "width"},
    {
      "name": "yscale",
      "range": "height",
      "domain": {
        "data": "companies",
        "field": "id",
        "sort": {"field": {"signal": "sortTable"}, "op": "min"}
      },
      "type": "band",
      "padding": 0.2
    },
    {
      "name": "valueColor",
      "type": "ordinal",
      "domain": {"data": "values", "field": "key"},
      "range": ["#333", "#FFF", "#999"]
    },
    {
      "name": "cellColor",
      "type": "ordinal",
      "domain": {"data": "values", "field": "short"},
      "range": {"signal": "[colors.orange, colors.navy, colors.faintNavy]"}
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "orient": "top",
      "domain": false,
      "ticks": false,
      "grid": false,
      "labelAngle": 25,
      "offset": 65,
      "labelBaseline": "bottom",
      "labelAlign": "right",
      "labelFontWeight": 700,
      "labelLimit": 0,
      "encode": {
        "labels": {
          "name": "x_labels",
          "interactive": true,
          "update": {
            "fill": {
              "signal": "if(datum.value == activeHeading, '#0037F1', '#000028')"
            },
            "cursor": {"value": "default"}
          },
          "hover": {
            "fill": {"value": "#0037F1"},
            "cursor": {"value": "pointer"}
          }
        }
      }
    }
  ],
  "marks": [
    {
      "name": "companyBackgrounds",
      "type": "rect",
      "from": {"data": "companies"},
      "encode": {
        "update": {
          "x": {"value": -6},
          "x2": {"value": -300},
          "y": {"scale": "yscale", "field": "id", "offset": -15},
          "fill": {"signal": "colors.faintNavy"},
          "height": {"signal": "barHeight"},
          "align": {"value": "center"}
        }
      }
    },
    {
      "name": "companyNames",
      "type": "text",
      "from": {"data": "companies"},
      "encode": {
        "update": {
          "x": {"value": -15},
          "y": {"scale": "yscale", "field": "id"},
          "width": {"value": 400},
          "text": {"field": "name"},
          "height": {"signal": "barHeight"},
          "align": {"value": "right"},
          "fill": {
            "signal": "if(currentAnswer.company == datum.id || currentAnswer.id == datum.id, colors.blue, colors.navy)"
          }
        }
      }
    },
    {
      "name": "countHeadingBackgrounds",
      "type": "rect",
      "from": {"data": "countRows"},
      "encode": {
        "update": {
          "x": {"value": -6},
          "x2": {"value": -300},
          "y": {"field": "y"},
          "fill": {"value": "#FF9300"},
          "opacity": {"value": 0.3},
          "height": {"signal": "barHeight"},
          "align": {"value": "center"}
        }
      }
    },
    {
      "name": "countHeadings",
      "type": "text",
      "from": {"data": "countRows"},
      "encode": {
        "update": {
          "x": {"value": -15},
          "y": {"field": "y", "offset": 15},
          "width": {"value": 400},
          "text": {"field": "label"},
          "height": {"signal": "barHeight"},
          "align": {"value": "right"},
          "fontStyle": {"value": "italic"},
          "fill": {
            "signal": "if(currentAnswer.key == datum.key, colors.blue, colors.navy)"
          }
        }
      }
    },
    {
      "name": "countBackgrounds",
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "metric_heading",
            "offset": {
              "signal": "if(datum.metric_heading == lastColumn, 5, if(datum.metric_heading == firstColumn, -5, 0))"
            }
          },
          "y": {"field": "y"},
          "fill": {"value": "#FF9300"},
          "width": {"value": 56},
          "height": {"signal": "barHeight"},
          "align": {"value": "center"},
          "opacity": {
            "signal": "if(datum.metric_heading == activeHeading, 0.3, 0.6)"
          },
          "stroke": {"value": "#fff"},
          "strokeWidth": {"signal": "if(currentAnswer.id == datum.id, 3, 0)"}
        }
      }
    },
    {
      "name": "countValues",
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "metric_heading",
            "offset": {
              "signal": "if(datum.metric_heading == lastColumn, 33, if(datum.metric_heading == firstColumn, 22, 27))"
            }
          },
          "width": {"value": 70},
          "y": {"field": "y", "offset": 15},
          "fill": {"signal": "colors.navy"},
          "fontWeight": {
            "signal": "if(datum.id == currentAnswer.id || datum.metric_heading == activeHeading, 'bold', 100)"
          },
          "fontStyle": {"value": "italic"},
          "text": {"field": "value"},
          "align": {"value": "center"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "table"},
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "metric_heading",
            "offset": {
              "signal": "if(datum.metric_heading == lastColumn, 5, if(datum.metric_heading == firstColumn, -5, 0))"
            }
          },
          "y": {"scale": "yscale", "field": "company", "offset": -15},
          "fill": {"scale": "cellColor", "field": "short"},
          "width": {"value": 56},
          "height": {"signal": "barHeight"},
          "align": {"value": "center"},
          "opacity": {
            "signal": "if(datum.metric_heading == activeHeading, 0.75, 1)"
          },
          "stroke": {"value": "#fff"},
          "strokeWidth": {"signal": "if(currentAnswer.id == datum.id, 3, 0)"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "metric_heading",
            "offset": {
              "signal": "if(datum.metric_heading == lastColumn, 33, if(datum.metric_heading == firstColumn, 22, 27))"
            }
          },
          "width": {"value": 70},
          "y": {"scale": "yscale", "field": "company"},
          "fill": {"scale": "valueColor", "field": "value"},
          "fontWeight": {
            "signal": "if(datum.id == currentAnswer.id || datum.metric_heading == activeHeading, 'bold', 100)"
          },
          "text": {"field": "short"},
          "align": {"value": "center"}
        }
      }
    }
  ]
}