{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A nested bar chart example, with bars grouped by category.",
  "width": 300,
  "height": 200,
  "signals": [
    {"name": "totalAnswers", "update": "data('answers').length"},
    {"name": "numGroups", "update": "data('groups').length"},
    {"name": "barHeight", "value": 15},
    {"name": "navyOpacity", "value": 1},
    {"name": "height", "update": "numGroups * (barHeight + 5)+ 100"}
  ],
  "data": [
    {
      "name": "answers",
      "url": "https://wikirate.org/Walk_Free_Foundation+MSA_KPIs_combined+Answer/answer_list.json?limit=0&filter[company_group][]=MSA+Asset+Managers&filter%5Bcompany_name%5D=&filter%5Bnot_ids%5D=&filter%5Byear%5D=latest&filter[status]=known",
      "transform": [
        {
          "type": "formula",
          "expr": "split(datum.value, ', ')",
          "as": "value_array"
        }
      ]
    },
    {
      "name": "groups",
      "values": [
        {"key": "Effectiveness KPIs"},
        {"key": "Business KPIs"},
        {"key": "No", "title": "None of the Above"}
      ],
      "transform": [{"type": "window", "ops": ["row_number"], "as": ["seq"]}]
    },
    {
      "name": "counts",
      "source": "answers",
      "transform": [
        {"type": "flatten", "fields": ["value_array"], "as": ["value"]},
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "formula",
          "expr": "datum.count + '/' + totalAnswers",
          "as": "count_label"
        },
        {
          "type": "lookup",
          "from": "groups",
          "key": "key",
          "fields": ["value"],
          "values": ["title", "seq"]
        },
        {
          "type": "formula",
          "expr": "if(isDefined(datum.title), datum.title, datum.value)",
          "as": "title"
        },
        {"type": "collect", "sort": {"field": "seq"}},
        {
          "type": "formula",
          "expr": "if(datum.value == 'No', 2, 0)",
          "as": "color"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "domain": [0, {"signal": "totalAnswers"}],
      "nice": true,
      "zero": true,
      "type": "linear",
      "range": "width"
    },
    {
      "name": "yscale",
      "range": "height",
      "domain": {"data": "counts", "field": "title"},
      "type": "band",
      "padding": 0.4
    },
    {
      "name": "color",
      "type": "linear",
      "domain": [0, 3],
      "range": ["#FF9300", "#FFDC00", "#FE0000", "#0037F1"]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"value": "#000028"},
          "opacity": {"signal": "navyOpacity"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "x2": {"scale": "xscale", "field": "count"},
          "y": {"scale": "yscale", "field": "title"},
          "height": {"signal": "barHeight"},
          "fill": {"scale": "color", "field": "color"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "xscale", "signal": "totalAnswers"},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "baseline": {"value": "bottom"},
          "align": {"value": "right"},
          "fill": {"value": "#000028"},
          "text": {"field": "count_label"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"scale": "yscale", "field": "title", "offset": -3},
          "text": {"field": "title"},
          "fill": {"value": "#000028"},
          "baseline": {"value": "bottom"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ]
}
