        }
      ]
    },
    {
      "name": "all_supply",
      "url": " https://wikirate.org/Walk_Free_Foundation+MS_Due_Diligence_Processes_in_Investments_sector_specific+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"},
        {
          "type": "formula",
          "expr": "{'aum': 'all', 'due': 'supply'}",
          "as": "keys"
        }
      ]
    },
    {
      "name": "all_invest",
      "url": " https://wikirate.org/Walk_Free_Foundation+MSA_supply_chain_due_diligence+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group]=MSA_Asset_Managers&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"},
        {
          "type": "formula",
          "expr": "{'aum': 'all', 'due': 'invest'}",
          "as": "keys"
        }
      ]
    },
    {
      "name": "groups",
      "values": [
        {"key": "high", "title": "High: >$1T"},
        {"key": "medium", "title": "Medium"},
        {"key": "low", "title": "Low: <$200B"},
        {"key": "all", "title": "All companies"}
      ]
    },
    {
      "name": "subgroups",
      "values": [
        {"key": "supply", "title": "Supply Chain"},
        {"key": "invest", "title": "Investment"}
      ]
    },
    {
      "name": "counts",
      "source": [
        "high_supply",
        "high_invest",
        "medium_supply",
        "medium_invest",
        "low_supply",
        "low_invest",
        "all_supply",
        "all_invest"
      ],
      "transform": [
        {
          "type": "lookup",
          "key": "key",
          "from": "groups",
          "fields": ["keys.aum"],
          "values": ["key", "title"],
          "as": ["group_key", "group_title"]
        },
        {
          "type": "lookup",
          "key": "key",
          "from": "subgroups",
          "fields": ["keys.due"],
          "values": ["key", "title"],
          "as": ["subgroup_key", "subgroup_title"]
        },
        {
          "type": "formula",
          "expr": "datum.group_key + '-' + datum.subgroup_key",
          "as": "bar_key"
        },
        {
          "type": "formula",
          "expr": "datum.count/datum.sum_count",
          "as": "percent"
        },
        {
          "type": "formula",
          "expr": "format(datum.percent, '.0%')",
          "as": "count_label"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "yscale",
      "type": "linear",
      "domain": [0, 1],
      "range": "height",
      "nice": true
    },
    {
      "name": "xGroupScale",
      "type": "band",
      "domain": {"data": "counts", "field": "group_title"},
      "range": "width",
      "padding": 0.2,
      "round": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "counts", "field": "subgroup_title"},
      "range": ["#F69400", "#020028"]
    }
  ],
  "axes": [
    {
      "orient": "left",
      "scale": "yscale",
      "ticks": false,
      "domain": false,
      "labelPadding": 10,
      "labelSeparation": 1,
      "tickCount": 5,
      "zindex": 1,
      "format": ".0%"
    },
    {
      "orient": "bottom",
      "scale": "xGroupScale",
      "ticks": false,
      "labelPadding": 10,
      "domainColor": "#BBBBBB",
      "title": "Assets Under Management",
      "titlePadding": 10,
      "titleFontWeight": "600"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_counts",
          "groupby": "group_title",
          "data": "counts"
        }
      },
      "encode": {
        "enter": {"x": {"scale": "xGroupScale", "field": "group_title"}}
      },
      "signals": [{"name": "width", "update": "bandwidth('xGroupScale')"}],
      "scales": [
        {
          "name": "xscale",
          "type": "band",
          "range": "width",
          "domain": {"data": "faceted_counts", "field": "bar_key"},
          "padding": 0.1
        }
      ],
      "marks": [
        {
          "type": "rect",
          "from": {"data": "faceted_counts"},
          "encode": {
            "update": {
              "y2": {"scale": "yscale", "value": 0},
              "y": {"scale": "yscale", "field": "percent"},
              "x": {"scale": "xscale", "field": "bar_key"},
              "width": {"value": 30},
              "fill": {"scale": "color", "field": "subgroup_title"}
            }
          }
        },
        {
          "type": "text",
          "from": {"data": "faceted_counts"},
          "encode": {
            "update": {
              "y": {
                "scale": "yscale",
                "field": "percent",
                "offset": {"value": -5}
              },
              "x": {
                "scale": "xscale",
                "field": "bar_key",
                "offset": {"value": 5}
              },
              "text": {"field": "count_label"}
            }
          }
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "type": "symbol",
      "orient": "top-right",
      "direction": "horizontal",
      "encode": {
        "labels": {"update": {"fontWeight": [{"value": 400}]}},
        "symbols": {"update": {"fillOpacity": [{"value": 1}]}}
      },
      "title": "Due Diligence:",
      "titleOrient": "left",
      "titleFontWeight": { "value": "600" },
      "symbolType": "square"
    }
  ]
}