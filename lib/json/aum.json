          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"},
        {
          "type": "formula",
          "expr": "{'aum': 'low', 'due': 'supply'}",
          "as": "keys"
        }
      ]
    },
    {
      "name": "low_invest",
      "url": " https://wikirate.org/Walk_Free_Foundation+MSA_supply_chain_due_diligence+answer/answer_list.json?limit=0&filter[status]=known&filter[company_group]=Low_AUM_MSA&filter[year]=latest",
      "transform": [
        {"type": "aggregate", "groupby": ["value"]},
        {
          "type": "impute",
          "key": "value",
          "keyvals": ["Yes"],
          "field": "count",
          "value": 0
        },
        {"type": "joinaggregate", "fields": ["count"], "ops": ["sum"]},
        {"type": "filter", "expr": "datum.value == 'Yes'"},
